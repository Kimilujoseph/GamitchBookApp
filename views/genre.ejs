<!-- tabs-start -->
<%- include("./partials/tabs.ejs") %>
    <!-- tabs-end-section -->



    <!-- book-section-start -->
    <% if(genrefound !='' ){ %>
        <div class="container mt-3">
            <div class="row">
                <div class="col-md-12 col-lg-4 text-center">
                    <nav class="breadcrumb">
                        <a class="breadcrumb-item" href="/">Home</a>
                        <span class="breadcrumb-item active" aria-current="page">
                            <%=genrefound[0].genre%>
                        </span>
                    </nav>
                </div>

            </div>
        </div>
        <section class="book-section">
            <div class="container-fluid">
                <div class="row text-center">

                    <%genrefound.forEach(function(item,index){%>
                        <div class="book-item col-6 col-sm-6 col-md-4 col-lg-3">
                            <div class="book-item-inner">
                                <div class="image-box">
                                    <img src="/images/books/<%-item.imageofthebook%>" alt="<%-item.name %>"
                                        class="img-thumbnail" loading="lazy">
                                </div>
                                <h4><a href="/books/<%-item._id%>"><%- item.nameofthebook %></a></h4>
                                <div class="author">
                                    <img src="/images/Authors/<%-item.author.image %>"
                                        alt="jake-nackos-IF9TK5Uy-KI-unsplash.jpg" class="author-img" loading="lazy">
                                    <span><a href="/author/<%-item.author._id%>"><%-item.author.name %></a></span>

                                </div>
                                <div class="rating-section">
                                    <span class="stars">
                                        <i class="fas fa-star"></i>
                                    </span>
                                    <span class="review"><%- item.rating %></span>
                                </div>
                                <div class="mt-3"><a href="#" class="btn btn-outline-success"><%-item.cost %></a></div>
                            </div>
                        </div>

                        <%})%>
                            <% } else{%>
                                <div class="row text-center">
                                    <div class="cols-2">
                                        <h1 class="display-4 col-lg-12 mt-6">Book of the genre will be published soon
                                        </h1>
                                    </div>
                                </div>
                                <%}%>

                </div>
        </section>
        <footer>
            <%- include("./partials/footer.ejs") %>
        </footer>