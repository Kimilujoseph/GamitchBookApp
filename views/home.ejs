<!-- main-wrapper-section-start -->
<!-- using partial to place tab -->

<%- include("./partials/tabs.ejs") %>

    <!-- banner-section-start -->
    <section>
        <div class="container banner-section">
            <div class="row flex-lg-row-reverse">
                <div class="col-md-8 col-lg-6">
                    <div class="banner-img">
                        <div class="circular-img">
                            <div class="circular-image-inner">
                                <div class="circular-img-circle"></div>
                                <img src="/images/books/rosie-pritchard-o6MMOwJe4fc-unsplash.jpg" alt="book" loading="eager
                               ">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-12 col-lg-6 banner-text">
                    <h4 class="title">want to know about your favourite book?</h4>
                    <h1 class="banner-text-info">get the best info here in my website</h1>
                    <p class="text">Lorem ipsum dolor sit amet consectetur adipisicing elit. Suscipit atque ipsam,
                        obcaecati consequuntur eum sapiente totam amet, illum repellat culpa quidem. Laborum libero
                        magni voluptates delectus dolorem dolorum voluptas! Veritatis.</p>
                </div>
            </div>
            <div class="funquestion row text-center m-2">
                <div class="fun-questions col-md-12 col-lg-2">

                    <a href="/user/userRegister" class="btn btn-outline-success btn-lg mb-5">signin</a>
                </div>
                <div class="fun-questions col-md-12 col-lg-2">
                    <a href="/user/userLogin" class="btn btn-outline-success btn-lg">login</a>
                </div>
            </div>
        </div>
    </section>
    <!-- exploration-start -->
    <section class="exploration">
        <div class="container">
            <div class="row title-section">
                <h2>explore todays latest</h2>
                <div class="explore-more d-flex">
                    <p>more in</p>
                    <span></span>
                </div>
            </div>
            <div class="categories row mb-3 text-center">
                <nav>
                    <span class="btn btn-success mt-3 col-lg-2 col-md-6"><a href="/genre/fantasy">fantasy</a></span>
                    <span class="btn btn-success mt-3 col-lg-2 col-md-6 "><a href="/genre/science fiction">science
                            fiction</a></span>
                    <span class="btn btn-success mt-3 col-lg-2 col-md-6"><a href="/genre/romance">romance</a></span>
                    <span class="btn btn-success mt-3 col-lg-2 col-md-6"><a href="/genre/history">history</a></span>
                    <span class="btn btn-success mt-3 col-lg-2 col-md-6"><a
                            href="/genre/self-improvement">self-improvement</a></span>
                </nav>
            </div>
        </div>
    </section>
    <!-- exploration-end -->

    <!-- book-section-start -->
    <section class="book-section">
        <div class="container">
            <div class="row row-cols-2 row-cols-lg-4 text-center">
                <% if(bookslist !='' ){ %>
                    <%bookslist.forEach(function(item,index){%>
                        <div class="book-item">
                            <div class="book-item-inner">
                                <a href="/books/<%-item._id%>" class="text-decoration-none text-dark">
                                    <div class=" image-box">
                                        <img src="/images/books/<%-item.imageofthebook %>" alt="<%-item.name %>"
                                            class="img-thumbnail">
                                    </div>
                                </a>
                                <h4><a href="/books/<%-item._id%>"><%- item.nameofthebook %></a></h4>
                                <div class="author">
                                    <img src="/images/Authors/<%-item.author.image %>"
                                        alt="jake-nackos-IF9TK5Uy-KI-unsplash.jpg" class="author-img">
                                    <span><a href="/author/<%-item.author._id %>"><%-item.author.name %></a></span>
                                </div>
                                <div class="rating-section">
                                    <span class="stars">
                                        <i class="fas fa-star"></i>
                                    </span>
                                    <span class="review"><%- item.rating %></span>
                                </div>
                                <div class="mt-3"><a href="#" class="btn btn-outline-success"><%-item.cost %></a></div>
                            </div>
                        </div>

                        <%})%>
                            <% }else{%>
                                <p>BOOKS WILL BE PUBLISHED SOON</p>
                                <%}%>

            </div>
            <div class="row mt-3">
                <div class="col-lg-12 col-md-12 text-center">
                    <span> <a href="/random" class="btn btn-outline-success btn-md">random book</a></span>
                    <a href="signinemail" class="btn btn-outline-success btn-md m-3">signin email</a>
                </div>
            </div>
        </div>
    </section>
    <!-- book-section-end -->

    <!-- author-quotes-start-and-testmonial-s.same-genre .book-itemection-start -->

    <section class="author-quotes">
        <div class="container">
            <div class="row text-center">
                <div class="col-md-12 col-lg-12">
                    <h2>author's quotes</h2>
                </div>
            </div>
            <div class="row text-center">
                <div class="col-md-12  col-lg-12 author-img-section">
                    <div class="img-box position-relative">
                        <img src="/images/Authors/<%-authorlist[0].image%>" alt="an image" class="js-image-toggle">
                    </div>
                    <div id="carouselOne" class="carousel slide pt-4 text-center" data-bs-ride="carousel">
                        <%if(typeof authorlist !="undefined" && authorlist.length>0){%>
                            <div class="carousel-inner" role="listbox">
                                <div class="carousel-item active"
                                    js-img-attribute="/images/Authors/<%-authorlist[0].image%>">
                                    <div class="author-name">
                                        <h6 style="font-size: 20px; font-weight: 600; text-transform: capitalize;">
                                            <%=authorlist[0].name%>
                                        </h6>
                                    </div>
                                    <div class="quotes-item">
                                        <p><%-authorlist[0].authorquotes%></p>
                                    </div>
                                </div>
                            </div>
                            <div class="carousel-item" js-img-attribute="/images/Authors/<%=authorlist[1].image%>">
                                <div class="author-name">
                                    <h6 style="font-size: 20px; font-weight: 600; text-transform: capitalize;">
                                        <%=authorlist[1].name%>
                                    </h6>
                                </div>
                                <div class="quotes-item">
                                    <p>
                                        <%=authorlist[1].authorquotes%>
                                    </p>
                                </div>

                            </div>
                            <div class="carousel-item" js-img-attribute="/images/Authors/<%=authorlist[2].image%>">
                                <div class="author-name">
                                    <h6 style="font-size: 20px; font-weight: 600; text-transform: capitalize;">
                                        <%=authorlist[2].name%>
                                    </h6>
                                </div>
                                <div class="quotes-item">
                                    <p>
                                        <%=authorlist[2].authorquotes%>
                                    </p>
                                </div>

                            </div>

                            <%}else{%>
                                <p>AUTHORS QUOTES WILL PUBLISHED SOON</p>
                                <%}%>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- author-quotes-start-and-testmonial-section-end -->
    <!-- banner-section-end -->
    <footer>
        <%- include("./partials/footer.ejs") %>
    </footer>

    <!-- main-wrapper-section-end -->