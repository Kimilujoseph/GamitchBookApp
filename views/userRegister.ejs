<%- include('./partials/tabs.ejs') %>
    <div class="container">
        <div class="row justify-content-center alighn-items-center">
            <div class="col-sm-12 col-md-8 col-lg-6">
                <h3 class="display-5">User Signin</h3>
                <% if(infoError !='' ){%>
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>

                        <strong><%-infoError%></strong>

                    </div>

                    <%}%>
                        <form action="/user/userRegister/submit" method="post">
                            <div class="mb-3">
                                <label for="username" class="form-label">username</label>
                                <input type="text" class="form-control" name="username" id=""
                                    aria-describedby="emailHelpId" placeholder="username" />


                            </div>
                            <div class="mb-3">
                                <label for="email" class="form-label">Email</label>
                                <input type="email" class="form-control" name="email" id=""
                                    aria-describedby="emailHelpId" placeholder="abc@mail.com" />


                            </div>
                            <div class="mb-3">
                                <label for="password" class="form-label">username</label>
                                <input type="password" class="form-control" name="password" id=""
                                    aria-describedby="emailHelpId" placeholder="mypassword@1234" />


                            </div>
                            <div class="col-2">
                                <button type="submit" class="btn btn-success btn-md">signin</button>
                            </div>

                        </form>
            </div>
        </div>
    </div>
    <footer>
        <%- include("./partials/footer.ejs") %>
    </footer>