<!-- tabs-start -->
<%- include("./partials/tabs.ejs") %>
    <!-- tabs-end-section -->


    <!-- book-section-start -->
    <section class="book-info-section-start">
        <div class="container">
            <div class="row gap-3">
                <div class="col-md-12 col-lg-3 text-center">
                    <nav class="breadcrumb">
                        <a class="breadcrumb-item" href="/">Home</a>
                        <a class="breadcrumb-item" href="/genre/<%-foundbook.genre%>"><%-foundbook.genre%></a>
                        <span class="breadcrumb-item active" aria-current="page"><%-foundbook.nameofthebook%></span>
                    </nav>

                    <div class="img-box mb-4">
                        <img src="/images/books/<%-foundbook.imageofthebook %>" alt="<%-foundbook.name%> image"
                            class="img-thumbnail sticky-top" style="top: 20px;" loading="lazy">
                    </div>
                    <a href="/user/preference?_id=<%-foundbook._id%>" class="btn btn-success w-80">Add to
                        favourite</a>
                </div>
                <div class="col-md-12 col-lg-5 book-info-section">

                    <div class="accordion" id="accordionExample">
                        <div class="accordion-item">
                            <h2 class="accordion-header" id="headingOne">
                                <button class="accordion-button" type="button" data-bs-toggle="collapse"
                                    data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                    Read more
                                </button>
                            </h2>
                            <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne"
                                data-bs-parent="#accordionExample">
                                <div class="accordion-body">
                                    <div class="name-of-the-book">
                                        <h5>Name of the book</h5>
                                        <h2>
                                            <%=foundbook.nameofthebook %>
                                        </h2>
                                    </div>
                                    <hr>
                                    <div class="rating">
                                        <h5>Rating</h5>
                                        <span>
                                            <i class="fas fa-star"></i>
                                        </span>
                                        <span><%-foundbook.rating%></span>
                                    </div>

                                    <hr>
                                    <div class="genre-of-the-book">
                                        <span><i class="fas fa-tags"></i></span>
                                        <span><%-foundbook.genre%></span>
                                    </div>
                                    <hr>
                                    <div class="synopsis-of-the-book">
                                        <h6>About the book</h6>
                                        <p><%-foundbook.aboutthebook %></p>
                                    </div>
                                    <hr>
                                    <div class="author-of-the-book">
                                        <h4>author</h4>
                                        <h5><a href="/author/<%-foundbook.author._id%>"><%-foundbook.author.name%></a>
                                        </h5>
                                    </div>
                                    <hr>
                                    <div class="date-of-publication">
                                        <h4>date of publication</h4>
                                        <span><%-foundbook.publishingdate%></span>
                                    </div>
                                    <hr>
                                </div>
                            </div>
                        </div>

                    </div>

                </div>
                <div class="col-sm-12 col-lg-3">
                    <h5><%-comment.length%> Reviews & comments</h5>
                    <%if(comment !='' ){%>
                        <%comment.forEach((eachComment,index)=>{%>
                            <div class="container">
                                <div class="row-cols-2">
                                    <p>by <%-eachComment.userId.username%></p>
                                </div>
                                <div class="row-cols-12">
                                    <p><%-eachComment.comment%></p>
                                </div>
                            </div>
                            <hr>
                            <%})%>

                                <%}else{%>
                                    <h5>no comments yet</h5>
                                    <% }%>
                                        <div class="comments">
                                            <form action="/postcomment/<%-foundbook._id%>" method="post">
                                                <div class="mb-3">
                                                    <label for="" class="form-label">comment</label>
                                                    <textarea class="form-control" name="comment" id="comment"
                                                        placeholder="post your comment" rows="3"></textarea>
                                                    <button type="submit"
                                                        class="btn btn-outline-success btn-sm mt-3">submit</button>
                                                </div>

                                            </form>
                                        </div>
                </div>
            </div>
        </div>
    </section>

    <!-- book-section-end -->

    <!-- same-categories-book-start -->
    <section class="same-genre">
        <div class="container">
            <div class="row">
                <div class="col-md-12 col-lg-12 text-center">
                    <h2>explore other book in <a href="/genre/<%-foundbook.genre%>">
                            <%=foundbook.genre%>
                        </a> genre</h2>
                </div>
            </div>
            <div class="row row-cols-2 row-cols-lg-4 text-center">
                <% if(genrefound !='' && genrefound.indexOf(foundbook)){%>
                    <%genrefound.forEach(function(items,index){%>
                        <div class="book-item">
                            <div class="book-item-inner">
                                <div class="image-box">
                                    <img src="/images/books/<%-items.imageofthebook%>" alt="<%-items.name%>"
                                        class="img-thumbnail" loading="lazy">
                                </div>
                                <h4><a href="/books/<%-items._id%>"><%-items.nameofthebook%></a></h4>
                                <div class="author">
                                    <img src="/images/Authors/<%-items.author.image%>" alt="<%-items.author.name%>"
                                        class="author-img" loading="lazy">
                                    <span><a href="/author/<%-items.author._id%>"><%-items.author.name%></a></span>
                                </div>
                                <div class="rating-section">
                                    <span class="rate"><%-items.rating%></span>
                                    <span class="stars">
                                        <i class="fas fa-star"></i>
                                    </span>
                                </div>
                                <div class="mt-3 p-7"><a href="#" class="btn btn-outline-success"><%-items.cost%></a>
                                </div>
                            </div>
                        </div>
                        <%})%>
                            <%} else{%>
                                <h2>no book found</h2>
                                <% }%>
            </div>


        </div>
    </section>

    <!-- same-categories-book-end -->

    <footer>
        <%- include("./partials/footer.ejs") %>
    </footer>